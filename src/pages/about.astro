---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
---

<Layout title="About - Arnoldart">
  <Navbar />
  <div class="pt-32 pb-20 px-6">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-4xl font-bold mb-8 text-ctp-mauve">About Me</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <img 
            src="https://images.unsplash.com/photo-1507238691740-187a5b1d37b8?w=800&auto=format&fit=crop&q=60" 
            alt="Profile" 
            class="rounded-lg w-full h-[400px] object-cover"
          />
        </div>
        <div class="space-y-6">
          <p class="text-ctp-subtext0">
            Hello! I'm a passionate developer with a love for creating beautiful and functional web experiences. 
            I specialize in modern web technologies and enjoy solving complex problems through elegant solutions.
          </p>
          <div>
            <h2 class="text-2xl font-bold mb-4 text-ctp-pink">Skills</h2>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <h3 class="font-bold mb-2">Frontend</h3>
                <ul class="text-ctp-subtext0 space-y-1">
                  <li>React</li>
                  <li>Next.js</li>
                  <li>Astro Js</li>
                </ul>
              </div>
              <div>
                <h3 class="font-bold mb-2">Backend</h3>
                <ul class="text-ctp-subtext0 space-y-1">
                  <li>Node.js</li>
                  <li>Express</li>
                  <li>PostgreSQL</li>
                  <li>MongoDB</li>
                </ul>
              </div>
              <div>
                <h3 class="font-bold mb-2">Game</h3>
                <ul class="text-ctp-subtext0 space-y-1">
                  <li>Unity</li>
                  <li>Blender</li>
                  <li>Photoshop</li>
                </ul>
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-2xl font-bold mb-4 text-ctp-pink">Experience</h2>
            <div class="space-y-4">
              <div>
                <h3 class="font-bold">Frontend Developer</h3>
                <p class="text-ctp-subtext0">Lumintu Logic Indonesia â€¢ 2024 - Present</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>