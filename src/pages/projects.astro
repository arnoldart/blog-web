---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import { Github, ExternalLink } from 'lucide-react';

const projects = [
  {
    title: "Project 1",
    description: "A modern web application built with React and TypeScript.",
    image: "https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=800&auto=format&fit=crop&q=60",
    tech: ["React", "TypeScript", "Tailwind CSS"],
    github: "#",
    demo: "#"
  },
  {
    title: "Project 2",
    description: "Full-stack application with real-time features.",
    image: "https://images.unsplash.com/photo-1517694712202-14dd9538aa97?w=800&auto=format&fit=crop&q=60",
    tech: ["Next.js", "Node.js", "PostgreSQL"],
    github: "#",
    demo: "#"
  },
  {
    title: "Project 3",
    description: "Mobile-first e-commerce platform.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&auto=format&fit=crop&q=60",
    tech: ["React Native", "Express", "MongoDB"],
    github: "#",
    demo: "#"
  }
];
---

<Layout title="Projects - Your Portfolio">
  <Navbar/>
  <div class="pt-32 pb-20 px-6">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-4xl font-bold mb-12 text-ctp-mauve">Projects</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <div class="rounded-lg bg-ctp-mantle border border-ctp-surface0 overflow-hidden">
            <img 
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-ctp-subtext0 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tech.map((tech) => (
                  <span class="px-3 py-1 text-sm rounded-full bg-ctp-surface0 text-ctp-subtext1">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-2">
                <a href={project.github} class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-ctp-surface0 hover:bg-ctp-surface1 transition-colors">
                  <Github className="w-4 h-4" />
                  Code
                </a>
                <a href={project.demo} class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-ctp-surface0 hover:bg-ctp-surface1 transition-colors">
                  <ExternalLink className="w-4 h-4" />
                  Demo
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  <Footer />
</Layout>